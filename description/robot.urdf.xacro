<?xml version="1.0"?>
<robot name="bot_v3">
        
  <material name="green_dark">
    <color rgba="0.0 0.5 0.0 1"/>
  </material>

  <material name="blue">
      <color rgba="0.0 0.0 1.0 1"/>
  </material>

  <material name="yellow">
      <color rgba="1.0 1.0 0.0 1"/>
  </material>

  <material name="white">
      <color rgba="1.0 1.0 1.0 1"/>
  </material>

  <material name="box_bot_blue">
      <color rgba="0.088656 0.428691 0.491021 1"/>
  </material>

  <link name="base_link">
  </link>


  <!-- Body -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.1 0.075 0.03"/>
      </geometry>
      <material name="box_bot_blue"/>
    </visual>
  

  <inertial>
      <mass value="0.2"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx= "0.00010875"  ixy= "0" ixz= "0" iyy= "0.0001816666666666667" iyz= "0" izz= "0.0001816666666666667" />
  </inertial>

  <collision>
      <geometry>
        <box size="0.1 0.075 0.03"/>
      </geometry>
  </collision>
  </link>
  <gazebo reference="chassis">
      <material>Gazebo/Blue</material>
  </gazebo>

  <joint name="base_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.03" />
    <parent link="base_link" />
    <child link="chassis" />
  </joint>

  <!-- Wheel Left -->
  <link name="left_front_wheel">      
      <visual>
        <origin rpy="0 0 0" xyz="0 0 -0.005"/>
        <geometry>
          <cylinder length="0.01" radius="0.015"/>
        </geometry>
        <material name="white"/>
      </visual>


    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.015"/>
      </geometry>
    </collision>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx= "2.8166666666666667e-06"  ixy= "0" ixz= "0" iyy= "2.8166666666666667e-06" iyz= "0" izz= "5.625e-06" />
    </inertial>

  </link>

   <gazebo reference="left_front_wheel">
    <kp>1000000.0</kp>
    <kd>1000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
    <material>Gazebo/Red</material>
  </gazebo>

  <joint name="joint_left_front_wheel" type="continuous">
    <origin rpy="1.5707 0 0" xyz="0.025 0.038 -0.015"/>
    <child link="left_front_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <!-- Wheel Left -->
  <link name="left_back_wheel">      
      <visual>
        <origin rpy="0 0 0" xyz="0 0 -0.005"/>
        <geometry>
          <cylinder length="0.01" radius="0.015"/>
        </geometry>
        <material name="white"/>
      </visual>


    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.015"/>
      </geometry>
    </collision>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx= "2.8166666666666667e-06"  ixy= "0" ixz= "0" iyy= "2.8166666666666667e-06" iyz= "0" izz= "5.625e-06" />
    </inertial>

  </link>
   <gazebo reference="left_back_wheel">
    <kp>1000000.0</kp>
    <kd>1000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
    <material>Gazebo/Red</material>
  </gazebo>

  <joint name="joint_left_back_wheel" type="continuous">
    <origin rpy="1.5707 0 0" xyz="-0.025 0.038 -0.015"/>
    <child link="left_back_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <!-- Wheel Right -->
  <link name="right_front_wheel">      
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.005"/>
        <geometry>
          <cylinder length="0.01" radius="0.015"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.01" radius="0.015"/>
        </geometry>
      </collision>

      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.05"/>
        <inertia ixx= "2.8166666666666667e-06"  ixy= "0" ixz= "0" iyy= "2.8166666666666667e-06" iyz= "0" izz= "5.625e-06" />
      </inertial>
  </link>
  <gazebo reference="right_front_wheel">
    <kp>1000000.0</kp>
    <kd>1000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
    <material>Gazebo/Red</material>
  </gazebo>
  <joint name="joint_right_front_wheel" type="continuous">  
    <origin rpy="1.5707 0 0" xyz="0.025 -0.038 -0.015"/>
    <child link="right_front_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

<!-- Wheel Right -->
  <link name="right_back_wheel">      
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.005"/>
        <geometry>
          <cylinder length="0.01" radius="0.015"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.01" radius="0.015"/>
        </geometry>
      </collision>

      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.05"/>
        <inertia ixx= "2.8166666666666667e-06"  ixy= "0" ixz= "0" iyy= "2.8166666666666667e-06" iyz= "0" izz= "5.625e-06" />
      </inertial>
  </link>
  <gazebo reference="right_back_wheel">
    <kp>1000000.0</kp>
    <kd>1000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
    <material>Gazebo/Red</material>
  </gazebo>

  <joint name="joint_right_back_wheel" type="continuous">  
    <origin rpy="1.5707 0 0" xyz="-0.025 -0.038 -0.015"/>
    <child link="right_back_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

 <!-- JOINT PUBLISHER -->
  <gazebo>
    <plugin name="box_bot_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
          <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>30</update_rate>

      <joint_name>joint_left_front_wheel</joint_name>
      <joint_name>joint_left_back_wheel</joint_name>
      <joint_name>joint_right_front_wheel</joint_name>
      <joint_name>joint_right_back_wheel</joint_name>

      
    </plugin>
  </gazebo>

  <!-- Differential drive -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">

      <!-- wheels -->
      <left_joint>joint_left_back_wheel</left_joint>
      <right_joint>joint_right_back_wheel</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.075</wheel_separation>
      <wheel_diameter>0.03</wheel_diameter>

      <!-- limits -->
      <max_wheel_torque>1.0</max_wheel_torque>
      <max_wheel_acceleration>0.5</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

    </plugin>
  </gazebo>


  <link name="rgb_camera_link_frame">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </visual>

    <collision>
       <origin rpy="0 0 0" xyz="0 0 0.0204"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0.0204"/>
      <inertia ixx="6.066578520833334e-06" ixy="0" ixz="0" iyy="6.072950163333333e-06" iyz="0" izz="9.365128684166666e-06"/>
    </inertial>
  </link>


  <joint name="rgb_camera_link_frame_joint" type="fixed">
      <origin rpy="0.0 0.2 3.1416" xyz="-0.045 0.0 0.001"/>
      <parent link="chassis" />
      <child link="rgb_camera_link_frame" />
      <axis xyz="0 0 0"/>
  </joint>

     <gazebo reference="rgb_camera_link_frame">
        <sensor name="camera" type="camera">
            <visualize>true</visualize>
            <pose>0 0 0 0 0.2 0</pose>
            <update_rate>30.0</update_rate>
            <always_on>1</always_on>
            <camera name="camera">
                <horizontal_fov>1.3962634</horizontal_fov>
                <image>
                    <width>480</width>
                    <height>360</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <!-- distance described in meters -->
                    <near>0.01</near>
                    <far>300</far>
                </clip>
                <distortion>
                    <k1>0.0</k1>
                    <k2>0.0</k2>
                    <k3>0.0</k3>
                    <p1>0.0</p1>
                    <p2>0.0</p2>
                    <center>0.5 0.5</center>
                </distortion>
            </camera>
            <plugin filename="libgazebo_ros_camera.so" name="camera_controller">
            <ros>
                <remapping>~/image_raw:=camera/image</remapping>
                <remapping>~/camera_info:=camera/camera_info</remapping>
            </ros>
            <frame_name>rgb_camera_link_frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>
<link name="lidar_link">
  <visual>
    <origin xyz="0 0 -0.030" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.015" radius="0.02"/>
    </geometry>
    <material name="yellow"/>
  </visual>
  <collision>
    <origin xyz="0 0 -0.0150" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.015" radius="0.02"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
  </inertial>
</link>

<joint name="lidar_joint" type="fixed">
  <origin xyz="0 0 0.05" rpy="0 0 0"/>
  <parent link="chassis"/>
  <child link="lidar_link"/>
</joint>

<gazebo reference="lidar_link">
  <sensor name="laser" type="ray">
    <pose>0 0 0 0 0 0</pose>
    <visualize>true</visualize>
    <update_rate>20</update_rate>
    <ray>
      <scan>
        <horizontal>
          <samples>720</samples>
          <resolution>1</resolution>
          <min_angle>-1.5708</min_angle>
          <max_angle>1.5708</max_angle>
        </horizontal>
      </scan>
      <range>
        <min>0.12</min>
        <max>3.5</max>
        <resolution>0.01</resolution>
      </range>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.01</stddev>
      </noise>
    </ray>
    <plugin name="gazebo_ros_laser_controller" filename="libgazebo_ros_laser.so">
      <ros>
        <remapping>~/scan:=scan</remapping>
      </ros>
      <frame_name>lidar_link</frame_name>
    </plugin>
  </sensor>
</gazebo>

</robot>